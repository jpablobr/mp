old_IFS="$IFS"
IFS=:
  echo "-------------------------------------------------------------------------"
  echo "Rename file extentions"
  echo "--------------------------------------------------------------------------"
  echo "String you want to replace:"
  read ori
  echo "New string (replace with value)"
  read new
  IFS=$old_IFS

for f in *.$ori; do
    base=`basename $f .$ori`
    mv $f $base.$new
    done
ls -la .