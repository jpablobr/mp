. ~/.mp/bash/config
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

export PERL_LOCAL_LIB_ROOT="/home/jpablobr/perl5";
export PERL_MB_OPT="--install_base /home/jpablobr/perl5";
export PERL_MM_OPT="INSTALL_BASE=/home/jpablobr/perl5";
export PERL5LIB="/home/jpablobr/perl5/lib/perl5/i686-linux-thread-multi:/home/jpablobr/perl5/lib/perl5";
export PATH="/home/jpablobr/perl5/bin:$PATH";
