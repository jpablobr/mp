envg() {
    env | grep -i "$1"
}

##############################################################################->
# Aliases directly appended from shell
#
aappd(){
    local alias_cmd=($@)
    local name=$(echo ${alias_cmd[0]})
    unset alias_cmd[0]
    echo "alias ${name}='${alias_cmd[*]}'" >> ~/.mp/bash/plugins/aliases
    grep -i ${1}  ~/.mp/bash/plugins/aliases
    exit 0
}

