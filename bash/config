#!/usr/bin/env bash
# ----------------------------------------------------------------------
# - Main config loader

# the basics
: ${HOME=~}
: ${LOGNAME=$(id -un)}
: ${UNAME=$(uname)}

# complete hostnames from this file
: ${HOSTFILE=$HOME/.ssh/known_hosts}
: ${HOSTNAME=$(/bin/hostname)}
# readline config
: ${INPUTRC=~/.inputrc}

#-----------------------------------------------------------------------
# - Plugins
PLUGINS=(
    "path"
    "options"
    "env"
    "sourcer"
    "aliases"
    "ls-colors"
    "pager-editor"
    "completions"
    "functions"
    "ssh"
    "prompt" )

for plugin in "${PLUGINS[@]}"; do
    plugin_path="$HOME/.mp/bash/plugins/${plugin}"
    [ -f $plugin_path ] && . $plugin_path
done

# condense $PATH entries
PATH=$(puniq $PATH)
MANPATH=$(puniq $MANPATH)
