# -*- mode: sh -*-
# Common aliases
alias o='open . &'
alias more='less'
alias l='less'
alias chx='chmod +x'
alias reload='. ~/.bash_profile'
alias open="gnome-open"
alias cl='clear'
alias _='sudo'
alias k9="kill -9"
alias mk_testd='cd ~/tmp && mkdir whatever && cd whatever'
alias ct='cheat_fu'
alias ctr='cd ~/.cheats_fu && ronn -r *.1.ronn && cd -'
alias srm='sudo rm'
alias rd='rm -rf'
alias r*='rm -fr *'
alias md='mkdir -p'
alias ..='cd ..'
alias g='git'
alias gst='git status'
alias sjp='$SHELL ~/.tmuxinator/jpablobr.tmux'
# Show history
alias history='fc -l 1'
alias hi='history | tail -20'
alias r='fc -s' # Awesome!
alias whereami='echo "$( hostname --fqdn ) ($(hostname -i)):$( pwd )"'
# Emacs
alias e='emacs -Q -nw'
alias em-s='sudo emacs -Q -nw -l ~/.emacs.d/jpablobr/nw-init.el'
alias emm='emacs -Q -nw -l ~/.emacs.d/jpablobr/nw-min.el'
alias em='emacs -Q -nw -l ~/.emacs.d/jpablobr/nw-jpablobr.el'
alias emr='emacs -Q -nw -l ~/.emacs.d/jpablobr/nw-ruby.el'
alias e-m-aliases='e ~/.my-precious/bash/aliases'
alias e-m-config='e ~/.my-precious/bash/config'
alias e-m-init='e ~/.emacs.d/init.el'
alias e-batch-comp='emacs -batch -f batch-byte-compile *.el'
# apt-get
alias sagi='sudo apt-get install'
# Pids IPs
alias pidips='sudo lsof -iTCP -sTCP:LISTEN -P'
# disk usage with human sizes and minimal depth
alias du1='du -h --max-depth=1'
alias fn='find . -name'
# Browse
alias br-f='firefox'
alias br-c='google-chrome '
 # ANSI color chart
alias ansi-chart='for f in {30..37};do for b in {40..47};do printf "\e[%dm\e[%dm%d on %d\e[0m" $b $f $f $b;done;echo;done'
alias hgrep='history | grep $1'
# Grep
alias g-l='la | grep'
alias g-p='ps aux | grep '

