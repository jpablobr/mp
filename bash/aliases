# - List
alias ls='ls --color=auto'
alias lsg='ls -lhGt'
alias l.='ls -d .[^.]*'
alias lh="ls -lh"
alias lt='ls -lt'
alias la='ls -lah --format=long'
alias l-dir='ls --format=vertical'
alias l-recent='ls -lAt | head'
alias l-old='ls -lAt | tail'

