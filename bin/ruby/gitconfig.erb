[user]
name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[alias]
  co           = checkout
  browse       = !hub browse
  compare      = !hub compare
  sh           = !git-sh
  grab         = !git-grab
  thanks       = !git-thanks
  track        = !git-track
  ll           = log --pretty=oneline --abbrev-commit --max-count=15
  wip          = !git add -u && git commit -m ...
  wipc         = !date >> WIP && git add WIP && git commit -m ...
  fp           = format-patch --stdout
  ci           = commit
  x            = checkout HEAD
  bv           = !git branch --color -v | cut -c1-100
  incoming     = !git-incoming
  in           = !git-incoming
  outgoing     = !git-outgoing
  out          = !git-outgoing
  s            = status -sb -uno --ignore-submodules=untracked
  st           = status
  sa           = status -sb --ignore-submodules=untracked

[color]
  diff = auto
  status = auto
  branch = auto

[branch]
  autosetupmerge = true

[core]
  excludesfile = /home/jpablobr/.gitignore
  editor = /usr/bin/emacsclient
  autocrlf = input
  filemode = true
  logallrefupdates = true
  whitespace = space-before-tab, trailing-space

[apply]
  whitespace = nowarn

[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%cr)%Creset

[help]
  browser = open

[sendemail]
  smtpserver = smtp.gmail.com
  smtpserverport = 587
  smtpencryption = tls
  smtpuser = xjpablobrx@gmail.com

[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>

[mirror]
  summary = true

[diff]
  color = auto
  rename = copy
  renames = copies
  mnemonicprefix = true

[pager]
  color = true

[status]
  color = auto

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow bold
  remote = green bold
  plain = red bold

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = blue bold

[color "status"]
  added = yellow
  changed = green bold
  untracked = blue bold

[mergetool "emacs-client"]
  cmd = exec /usr/bin/emacs-client $LOCAL $MERGED $REMOTE

[merge]
  tool = emacs-clients